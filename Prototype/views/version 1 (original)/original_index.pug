doctype html
head
  meta(charset='utf-8')
  title DragonEvents
  link(rel='stylesheet', type='text/css', href='../css/index.css')
// Page Container
#container
  // Header
  header
    // Logo
    #logo
      img(src='../img/DragonEventsLogo.JPG', alt='DragonEvents Logo', height='150', width='200')
      h2 Welcome to DragonEvents!
    // Navigation
    nav
      ul.nav
        li
          a(href='/') Home
        li
          a(href='/Events') Events
        li
          a(href='/about') About us
        li
          a(href='/login') Log in
  // Main Content
  #MainContent
    #MainPage
      h3 Featured Events
      // Feature
      each event in events
        #MainEvents
          h3 #{event.name}
          p #{event.desc}
          p #{event.start}
          p #{event.end}
